<!DOCTYPE sqlMap 
          PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
          "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Boekwaarde">
	<typeAlias alias="boekwaarde" type="org.techytax.domain.Boekwaarde" />
	<select id="getVorigeBoekwaarde" resultClass="boekwaarde">
		SELECT id, balans_id as balansId, boekjaar as jaar, saldo FROM boekwaarde WHERE balans_id=#balansId# AND boekjaar=#jaar#-1
	</select>
	<select id="getBoekwaardeDitJaar" resultClass="boekwaarde">
		SELECT id, balans_id as balansId, boekjaar as jaar, saldo FROM boekwaarde WHERE balans_id=#balansId# AND boekjaar=#jaar#
	</select>	
	<insert id="insertBoekwaarde" parameterClass="boekwaarde">
		insert into boekwaarde
		values(#id#,#balansId#,#jaar#,#saldo#)
	</insert>
</sqlMap>