<!DOCTYPE sqlMap 
          PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
          "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Settlement">
	<typeAlias alias="settlement" type="org.techytax.domain.Settlement" />
	<insert id="insertSettlement" parameterClass="settlement">
		insert into settlement
		values(#userId#,#description#,#startDate#,#purchasePrice#,#startupCosts#,#nofSquareMetersBusiness#,#nofSquareMetersPrivate#,0,0,#nofYearsForDepreciation#)
	</insert>
	<update id="updateSettlement" parameterClass="settlement">
		update settlement 
		set description = #description#,
		startDate = #startDate#,
		purchasePrice = #purchasePrice#,
		startupCosts = #startupCosts#, 
		nofSquareMetersBusiness = #nofSquareMetersBusiness#,
		nofSquareMetersPrivate = #nofSquareMetersPrivate#,
		nofYearsForDepreciation = #nofYearsForDepreciation#
		WHERE user_id = #userId#
	</update>	
	<select id="getSettlement" parameterClass="long" resultClass="settlement">
		select description, startDate, purchasePrice, startupCosts, nofYearsForDepreciation, nofSquareMetersBusiness, nofSquareMetersPrivate 
		from settlement 
		where user_id=#userId# 
	</select>			
</sqlMap>