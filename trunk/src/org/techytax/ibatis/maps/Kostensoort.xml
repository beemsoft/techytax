<!DOCTYPE sqlMap 
          PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
          "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Kostensoort">
	<typeAlias alias="kostensoort" type="org.techytax.domain.Kostensoort" />
	<select id="getKostensoortLijst" resultClass="kostensoort">
		SELECT id as kostenSoortId, omschrijving, bijschrijving, btwVerrekenbaar, balansMeetellen, aftrekbaar, investering FROM kostensoort
	</select>

	<insert id="insertKostensoort" parameterClass="kostensoort">
		insert into kostensoort
		values(#kostenSoortId#,#omschrijving#,#bijschrijving#,#btwVerrekenbaar#,#balansMeetellen#,#aftrekbaar#,#investering#)
	</insert>
	<select id="getKostensoort" parameterClass="string"
		resultClass="kostensoort">
		SELECT id as kostenSoortId, omschrijving, bijschrijving, btwVerrekenbaar, balansMeetellen, aftrekbaar, investering FROM kostensoort WHERE id = #value#
	</select>
	<update id="updateKostensoort" parameterClass="kostensoort">
		update kostensoort set omschrijving = #omschrijving#,
		bijschrijving = #bijschrijving#, btwVerrekenbaar =
		#btwVerrekenbaar#, balansMeetellen = #balansMeetellen#,
		aftrekbaar = #aftrekbaar#, investering = #investering# WHERE id = #kostenSoortId#
	</update>
</sqlMap>