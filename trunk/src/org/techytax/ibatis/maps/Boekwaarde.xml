<!DOCTYPE sqlMap 
          PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
          "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Boekwaarde">
	<typeAlias alias="boekwaarde" type="org.techytax.domain.Boekwaarde" />
	<typeAlias alias="restwaarde" type="org.techytax.domain.Restwaarde" />	
	<select id="getVorigeBoekwaarde" parameterClass="boekwaarde" resultClass="boekwaarde">
		SELECT id, balans_id as balansId, boekjaar as jaar, saldo 
		FROM boekwaarde 
		WHERE balans_id=#balansId# 
		AND boekjaar=#jaar#-1
		AND user_id=#userId#
	</select>
	<select id="getAllBoekwaardes" resultClass="boekwaarde">
		SELECT id, balans_id as balansId, boekjaar as jaar, saldo 
		FROM boekwaarde
	</select>	
	<select id="getBoekwaardeDitJaar" parameterClass="boekwaarde" resultClass="boekwaarde">
		SELECT id, balans_id as balansId, boekjaar as jaar, saldo 
		FROM boekwaarde 
		WHERE balans_id=#balansId# 
		AND boekjaar=#jaar#
		AND user_id=#userId#
	</select>	
	<insert id="insertBoekwaarde" parameterClass="boekwaarde">
		insert into boekwaarde
		values(#id#,#userId#,#balansId#,#jaar#,#saldo#)
	</insert>
	<update id="updateBoekwaarde" parameterClass="boekwaarde">
		update boekwaarde set saldo = #saldo#
		WHERE id = #id#
	</update>	
	<select id="getAllRestwaardes" resultClass="restwaarde">
		SELECT id, restwaarde 
		FROM restwaarde
	</select>
	<update id="updateRestwaarde" parameterClass="restwaarde">
		update restwaarde set restwaarde = #restwaarde#
		WHERE id = #id#
	</update>		
</sqlMap>