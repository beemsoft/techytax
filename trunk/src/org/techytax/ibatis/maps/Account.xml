<!DOCTYPE sqlMap 
          PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
          "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Account">
	<typeAlias alias="account" type="org.techytax.domain.Account" />
	<select id="getAccounts" resultClass="account">
		SELECT * FROM accounts
	</select>

	<insert id="insertAccount" parameterClass="account">
		insert into accounts
		values(#id#,#description#,#datum#,#saldo#)
	</insert>
	<select id="getAccount" parameterClass="string"
		resultClass="kostensoort">
		SELECT * FROM accounts WHERE id = #value#
	</select>
	<update id="updateAccount" parameterClass="account">
		update accounts set description = #description#,
		datum = #datum#, saldo = #saldo# WHERE id = #id#
	</update>
</sqlMap>