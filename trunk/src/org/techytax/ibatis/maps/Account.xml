<!DOCTYPE sqlMap 
          PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
          "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Account">
	<typeAlias alias="account" type="org.techytax.domain.Account" />
	<typeAlias alias="balance" type="org.techytax.domain.AccountBalance" />	
	<select id="getAccounts" resultClass="account">
		SELECT * FROM accounts
	</select>
	<insert id="insertAccount" parameterClass="account">
		insert into accounts
		values(#id#,#description#,#number#,#name#,#dateOpened#,#dateClosed#)
	</insert>
	<select id="getAccount" parameterClass="string"
		resultClass="account">
		SELECT id, description, number, name, date_opened as dateOpened, date_closed as dateClosed FROM accounts WHERE id = #value#
	</select>
	<update id="updateAccount" parameterClass="account">
		update accounts set description = #description#,
		number = #number#, name = #name#, date_opened = #dateOpened#, date_closed = #dateClosed# WHERE id = #id#
	</update>
	<select id="getAccountBalance" parameterClass="string"
		resultClass="balance">
		SELECT id, account_id as accountId, datum, balance FROM account_balance WHERE account_id = #value#
	</select>
	<insert id="insertAccountBalance" parameterClass="balance">
		insert into account_balance
		values(#id#,#accountId#,#datum#,#balance#)
	</insert>
</sqlMap>