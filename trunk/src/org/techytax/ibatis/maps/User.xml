<!DOCTYPE sqlMap 
          PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
          "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="User">
	<typeAlias alias="user" type="org.techytax.domain.User" />
	<select id="getUser" parameterClass="string"
		resultClass="user">
		SELECT id, username, role, password, fullName, companyName, email, latestOnlineTime, blocked, freezeStartDate, freezeEndDate, paid FROM user WHERE username = #value#
	</select>
</sqlMap>