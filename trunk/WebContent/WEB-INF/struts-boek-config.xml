<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
                               "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<!-- Form Beans -->
	<form-beans>
		<form-bean name="kostForm" type="org.techytax.struts.form.KostForm" />
		<form-bean name="balansForm" type="org.techytax.struts.form.BalansForm" />
		<form-bean name="kostensoortForm" type="org.techytax.struts.form.KostensoortForm" />
		<form-bean name="kostmatchForm" type="org.techytax.struts.form.KostmatchForm" />
		<form-bean name="uploadForm" type="org.techytax.struts.form.UploadForm" />
		<form-bean name="accountForm" type="org.techytax.struts.form.AccountForm" />		
		<form-bean name="accountBalanceForm" type="org.techytax.struts.form.AccountBalanceForm" />		
	</form-beans>

	<!-- Global Exceptions -->
	<global-exceptions></global-exceptions>

	<!-- Global Forwards -->
	<global-forwards>
		<forward name="error" path="error.jsp" />
		<forward name="login" path="index.jsp" />
	</global-forwards>

	<!-- Action Mappings -->
	<action-mappings>
		<action path="/getKostLijst"
			type="org.techytax.struts.action.GetKostLijstAction">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getKostLijstResultaat.jsp">
			</forward>
		</action>
		<action path="/getKostLijstWithForm"
			type="org.techytax.struts.action.GetKostLijstWithFormAction" name="balansForm"
			scope="session">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getKostLijstResultaat.jsp">
			</forward>
			<forward name="grafiek"
				path="/WEB-INF/jsp/boek/grafiek/xy_chart.jsp">
			</forward>
			<forward name="fiscaal"
				path="/WEB-INF/jsp/boek/fiscaal/overzicht.jsp">
			</forward>
			<forward name="error"
				path="/WEB-INF/jsp/boek/getKostLijstResultaat.jsp">
			</forward>		
		</action>
		<action path="/updateKost" type="org.techytax.struts.action.UpdateKostAction"
			name="kostForm" scope="request">
			<forward name="success" path="/getKostLijstWithForm.do"></forward>
		</action>
		<action path="/editKost" name="kostForm"
			type="org.techytax.struts.action.EditKostAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editKost.jsp">
			</forward>
		</action>
		<action path="/newKost" type="org.techytax.struts.action.NewKostAction"
			scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/insertKost.jsp">
			</forward>
		</action>
		<action path="/insertKost" type="org.techytax.struts.action.InsertKostAction"
			name="kostForm" scope="request">
			<forward name="success" path="/getKostLijst.do"></forward>
		</action>
		<action path="/getKostensoortLijst"
			type="org.techytax.struts.action.GetKostensoortLijstAction">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getKostensoortLijstResultaat.jsp">
			</forward>
		</action>		
		<action path="/updateKostensoort" type="org.techytax.struts.action.UpdateKostensoortAction"
			name="kostensoortForm" scope="request">
			<forward name="success" path="/getKostensoortLijst.do"></forward>
		</action>
		<action path="/editKostensoort" name="kostensoortForm"
			type="org.techytax.struts.action.EditKostensoortAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editKostensoort.jsp">
			</forward>
		</action>
		<action path="/newKostensoort" type="org.techytax.struts.action.NewKostensoortAction"
			scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/insertKostensoort.jsp">
			</forward>
		</action>
		<action path="/insertKostensoort" type="org.techytax.struts.action.InsertKostensoortAction"
			name="kostensoortForm">
			<forward name="success" path="/getKostensoortLijst.do"></forward>
		</action>
		<action path="/updateKostmatch" type="org.techytax.struts.action.UpdateKostmatchAction"
			name="kostmatchForm" scope="request">
			<forward name="success" path="/editKostensoort.do"></forward>
		</action>
		<action path="/updateBtwmatch" type="org.techytax.struts.action.UpdateBtwmatchAction"
			name="kostmatchForm" scope="request">
			<forward name="success" path="/editKostensoort.do"></forward>
		</action>		
		<action path="/editKostmatch" name="kostmatchForm"
			type="org.techytax.struts.action.EditKostmatchAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editKostmatch.jsp">
			</forward>
		</action>
		<action path="/editBtwmatch" name="kostmatchForm"
			type="org.techytax.struts.action.EditBtwmatchAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editBtwmatch.jsp">
			</forward>
		</action>		
		<action path="/newKostmatch" type="org.techytax.struts.action.NewKostmatchAction"
			scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/insertKostmatch.jsp">
			</forward>
		</action>
		<action path="/insertKostmatch" type="org.techytax.struts.action.InsertKostmatchAction"
			name="kostmatchForm" scope="request">
			<forward name="success" path="/editKostensoort.do"></forward>
		</action>			
		<action path="/laadKostLijst"
			forward="/WEB-INF/jsp/boek/laadGegevens.jsp" />
		<action path="/uploadFile"
			type="org.techytax.struts.action.UploadFileAction" name="uploadForm">
			<forward name="business"
				path="/WEB-INF/jsp/boek/getInlaadResultaat.jsp">
			</forward>
			<forward name="private"
				path="/WEB-INF/jsp/boek/getLoadDataResultPrivat.jsp">
			</forward>			
		</action>
		<action path="/afschrijvenKost"
			type="org.techytax.struts.action.AfschrijvenKostAction">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getInlaadResultaat.jsp">
			</forward>
		</action>		
		<action path="/insertKostLijst"
			type="org.techytax.struts.action.InsertKostLijstAction">
			<forward name="success" path="/getKostLijst.do"></forward>
		</action>
		<action path="/insertPrivateExpenses"
			type="org.techytax.struts.action.InsertPrivateExpensesAction">
			<forward name="success" path="/getKostLijst.do"></forward>
		</action>
		<action path="/insertActiva"
			type="org.techytax.struts.action.InsertActivaAction">
			<forward name="success"
				path="/getKostLijst.do">
			</forward>
		</action>
		<action path="/getAccounts"
			type="org.techytax.struts.action.GetAccountsAction">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getAccounts.jsp">
			</forward>
		</action>		
		<action path="/updateAccount" type="org.techytax.struts.action.UpdateAccountAction"
			name="accountForm" scope="request">
			<forward name="success" path="/getAccounts.do"></forward>
		</action>
		<action path="/editAccount" name="accountForm"
			type="org.techytax.struts.action.EditAccountAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editAccount.jsp">
			</forward>
		</action>
		<action path="/newAccount" type="org.techytax.struts.action.NewAccountAction"
			scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/insertAccount.jsp">
			</forward>
		</action>
		<action path="/insertAccount" type="org.techytax.struts.action.InsertAccountAction"
			name="accountForm">
			<forward name="success" path="/getAccounts.do"></forward>
		</action>
		<action path="/getAccountBalance"
			type="org.techytax.struts.action.GetAccountBalanceAction">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getAccountBalance.jsp">
			</forward>
		</action>
		<action path="/newAccountBalance" type="org.techytax.struts.action.NewAccountBalanceAction">
			<forward name="success" path="/WEB-INF/jsp/boek/insertAccountBalance.jsp"></forward>
		</action>		
		<action path="/insertAccountBalance" type="org.techytax.struts.action.InsertAccountBalanceAction"
			name="accountBalanceForm" scope="request">
			<forward name="success" path="/getAccounts.do"></forward>
		</action>		
	</action-mappings>
	<message-resources parameter="properties.messages_nl" />
	<message-resources parameter="properties.messages_en" />
	<message-resources parameter="properties.messages_en_US" />	
	<message-resources parameter="properties.messages" />
</struts-config>
