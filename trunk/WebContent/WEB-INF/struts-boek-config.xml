<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN"
                               "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>

	<!-- Form Beans -->
	<form-beans>
		<form-bean name="costForm" type="org.techytax.struts.form.CostForm" />
		<form-bean name="balansForm" type="org.techytax.struts.form.BalansForm" />
		<form-bean name="kostensoortForm" type="org.techytax.struts.form.KostensoortForm" />
		<form-bean name="kostmatchForm" type="org.techytax.struts.form.KostmatchForm" />
		<form-bean name="uploadForm" type="org.techytax.struts.form.UploadForm" />
		<form-bean name="accountForm" type="org.techytax.struts.form.AccountForm" />		
		<form-bean name="accountBalanceForm" type="org.techytax.struts.form.AccountBalanceForm" />		
		<form-bean name="databaseForm" type="org.techytax.struts.form.DatabaseForm" />		
		<form-bean name="auditReportForm" type="org.techytax.struts.form.AuditReportForm" />
		<form-bean name="loginForm" type="org.techytax.struts.form.LoginForm" />
		<form-bean name="depreciationForm" type="org.techytax.struts.form.DepreciationForm" />
		<form-bean name="bookValueForm" type="org.techytax.struts.form.BookValueForm" />
		<form-bean name="settlementForm" type="org.techytax.struts.form.SettlementForm" />
		<form-bean name="languageForm" type="org.techytax.struts.form.LanguageForm" />									
	</form-beans>

	<!-- Global Exceptions -->
	<global-exceptions>
	    <exception
	      key="errors.general"
	      type="java.lang.Exception"
	      path="/jsp/error.jsp" />
	</global-exceptions>

	<!-- Global Forwards -->
	<global-forwards>
		<forward name="error" path="error.jsp" />
		<forward name="login" path="index.jsp" />
	</global-forwards>

	<!-- Action Mappings -->
	<action-mappings>
		<action path="/getKostLijst"
			type="org.techytax.struts.action.GetKostLijstAction">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getKostLijstResultaat.jsp">
			</forward>
		</action>
		<action path="/getKostLijstWithForm"
			type="org.techytax.struts.action.GetKostLijstWithFormAction" name="balansForm"
			scope="session">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getKostLijstResultaat.jsp">
			</forward>
			<forward name="fiscaal"
				path="/WEB-INF/jsp/boek/fiscaal/overzicht.jsp">
			</forward>
			<forward name="error"
				path="/WEB-INF/jsp/boek/getKostLijstResultaat.jsp">
			</forward>		
		</action>
		<action path="/updateKost" type="org.techytax.struts.action.UpdateKostAction"
			name="costForm" scope="session">
			<forward name="success" path="/editKost.do"></forward>
		</action>
		<action path="/editKost" name="costForm"
			type="org.techytax.struts.action.EditKostAction" scope="session">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editKost.jsp">
			</forward>
		</action>
		<action path="/newKost" type="org.techytax.struts.action.NewKostAction"
			name="costForm" scope="session">
			<forward name="success"
				path="/WEB-INF/jsp/boek/insertKost.jsp">
			</forward>
		</action>
		<action path="/insertKost" type="org.techytax.struts.action.InsertKostAction"
			name="costForm" scope="session" >
			<forward name="success" path="/WEB-INF/jsp/boek/insertKost.jsp"></forward>
		</action>
		<action path="/getKostensoortLijst"
			type="org.techytax.struts.action.GetKostensoortLijstAction">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getKostensoortLijstResultaat.jsp">
			</forward>
		</action>		
		<action path="/updateKostensoort" type="org.techytax.struts.action.UpdateKostensoortAction"
			name="kostensoortForm" scope="request">
			<forward name="success" path="/getKostensoortLijst.do"></forward>
		</action>
		<action path="/editKostensoort" name="kostensoortForm"
			type="org.techytax.struts.action.EditKostensoortAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editKostensoort.jsp">
			</forward>
		</action>
		<action path="/newKostensoort" forward="/WEB-INF/jsp/boek/insertKostensoort.jsp"/>
		<action path="/insertKostensoort" type="org.techytax.struts.action.InsertKostensoortAction"
			name="kostensoortForm">
			<forward name="success" path="/getKostensoortLijst.do"></forward>
		</action>
		<action path="/updateKostmatch" type="org.techytax.struts.action.UpdateKostmatchAction"
			name="kostmatchForm" scope="request">
			<forward name="success" path="/editKostensoort.do"></forward>
		</action>
		<action path="/updateBtwmatch" type="org.techytax.struts.action.UpdateBtwmatchAction"
			name="kostmatchForm" scope="request">
			<forward name="success" path="/editKostensoort.do"></forward>
		</action>		
		<action path="/editKostmatch" name="kostmatchForm"
			type="org.techytax.struts.action.EditKostmatchAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editKostmatch.jsp">
			</forward>
		</action>
		<action path="/editBtwmatch" name="kostmatchForm"
			type="org.techytax.struts.action.EditBtwmatchAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editBtwmatch.jsp">
			</forward>
		</action>		
		<action path="/newKostmatch" type="org.techytax.struts.action.NewKostmatchAction"
			scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/insertKostmatch.jsp">
			</forward>
		</action>
		<action path="/insertKostmatch" type="org.techytax.struts.action.InsertKostmatchAction"
			name="kostmatchForm" scope="request">
			<forward name="success" path="/editKostensoort.do"></forward>
		</action>
		<action path="/updateCostMatchPrivate" type="org.techytax.struts.action.UpdateCostMatchPrivateAction"
			name="kostmatchForm" scope="request">
			<forward name="success" path="/editKostensoort.do"></forward>
		</action>
		<action path="/updateBtwMatchPrivate" type="org.techytax.struts.action.UpdateBtwMatchPrivateAction"
			name="kostmatchForm" scope="request">
			<forward name="success" path="/editKostensoort.do"></forward>
		</action>		
		<action path="/editCostMatchPrivate" name="kostmatchForm"
			type="org.techytax.struts.action.EditCostMatchPrivateAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editCostMatchPrivate.jsp">
			</forward>
		</action>
		<action path="/editBtwMatchPrivate" name="kostmatchForm"
			type="org.techytax.struts.action.EditBtwMatchPrivateAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editBtwMatchPrivate.jsp">
			</forward>
		</action>		
		<action path="/newCostMatchPrivate" type="org.techytax.struts.action.NewCostMatchPrivateAction"
			scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/insertCostMatchPrivate.jsp">
			</forward>
		</action>
		<action path="/insertCostMatchPrivate" type="org.techytax.struts.action.InsertCostMatchPrivateAction"
			name="kostmatchForm" scope="request">
			<forward name="success" path="/editKostensoort.do"></forward>
		</action>
		<action path="/deleteCostMatchPrivate" type="org.techytax.struts.action.DeleteCostMatchPrivateAction"
			name="kostmatchForm" scope="request">
			<forward name="success" path="/editKostensoort.do"></forward>
		</action>							
		<action path="/laadKostLijst"
			forward="/WEB-INF/jsp/boek/laadGegevens.jsp" />
		<action path="/uploadFile"
			type="org.techytax.struts.action.UploadFileAction" name="uploadForm">
			<forward name="business"
				path="/WEB-INF/jsp/boek/getInlaadResultaat.jsp">
			</forward>
			<forward name="private"
				path="/WEB-INF/jsp/boek/getLoadDataResultPrivat.jsp">
			</forward>			
		</action>
		<action path="/afschrijvenKost" type="org.techytax.struts.action.AfschrijvenKostAction" name="depreciationForm" >
			<forward name="success"
				path="/editKost.do">
			</forward>
		</action>		
		<action path="/insertKostLijst"
			type="org.techytax.struts.action.InsertKostLijstAction">
			<forward name="success" path="/getKostLijst.do"></forward>
		</action>
		<action path="/insertPrivateExpenses"
			type="org.techytax.struts.action.InsertPrivateExpensesAction">
			<forward name="success" path="/getKostLijst.do"></forward>
		</action>
		<action path="/getAccounts"
			type="org.techytax.struts.action.GetAccountsAction">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getAccounts.jsp">
			</forward>
		</action>		
		<action path="/updateAccount" type="org.techytax.struts.action.UpdateAccountAction"
			name="accountForm" scope="request">
			<forward name="success" path="/getAccounts.do"></forward>
		</action>
		<action path="/editAccount" name="accountForm"
			type="org.techytax.struts.action.EditAccountAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editAccount.jsp">
			</forward>
		</action>
		<action path="/newAccount" forward="/WEB-INF/jsp/boek/insertAccount.jsp"/>
		<action path="/insertAccount" type="org.techytax.struts.action.InsertAccountAction"
			name="accountForm">
			<forward name="success" path="/getAccounts.do"></forward>
		</action>
		<action path="/getAccountBalance"
			type="org.techytax.struts.action.GetAccountBalanceAction">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getAccountBalance.jsp">
			</forward>
		</action>
		<action path="/newAccountBalance" type="org.techytax.struts.action.NewAccountBalanceAction">
			<forward name="success" path="/WEB-INF/jsp/boek/insertAccountBalance.jsp"></forward>
		</action>		
		<action path="/insertAccountBalance" type="org.techytax.struts.action.InsertAccountBalanceAction"
			name="accountBalanceForm" scope="request">
			<forward name="success" path="/getAccounts.do"></forward>
		</action>
		<action path="/getDatabaseInfo" type="org.techytax.struts.action.GetDatabaseInfoAction" name="databaseForm" scope="session">
			<forward name="success" path="/WEB-INF/jsp/database.jsp"></forward>
		</action>			
		<action path="/changeDatabase" type="org.techytax.struts.action.ChangeDatabaseAction"
			name="databaseForm" scope="session">
			<forward name="success" path="/index.jsp"></forward>
			<forward name="error"
				path="/WEB-INF/jsp/database.jsp">
			</forward>				
		</action>
		<action path="/sendAuditReport" type="org.techytax.struts.action.SendAuditReportAction"
			name="auditReportForm">
			<forward name="success" path="/getKostLijst.do"></forward>
		</action>
		<action path="/toLogin" forward="/WEB-INF/jsp/login.jsp"/>
		<action path="/login" type="org.techytax.struts.action.LoginAction"
			name="loginForm">
			<forward name="success" path="/index.jsp"></forward>
			<forward name="error" path="/WEB-INF/jsp/login.jsp"></forward>
		</action>
		<action path="/logout" type="org.techytax.struts.action.LogoutAction">
			<forward name="success" path="/index.jsp"></forward>
		</action>
		<action path="/getBookValues"
			type="org.techytax.struts.action.GetBookValuesAction">
			<forward name="success"
				path="/WEB-INF/jsp/boek/getBookValues.jsp">
			</forward>
		</action>
		<action path="/updateActivum" type="org.techytax.struts.action.UpdateActivumAction"
			name="depreciationForm" scope="request">
			<forward name="success" path="/editKost.do"></forward>
		</action>
		<action path="/editBookValue" name="bookValueForm"
			type="org.techytax.struts.action.EditBookValueAction" scope="request">
			<forward name="success"
				path="/WEB-INF/jsp/boek/editBookValue.jsp">
			</forward>
		</action>
		<action path="/updateBookValue" name="bookValueForm" scope="request"
			type="org.techytax.struts.action.UpdateBookValueAction">
			<forward name="success"
				path="/getBookValues.do">
			</forward>
		</action>
		<action path="/newBookValue" forward="/WEB-INF/jsp/boek/insertBookValue.jsp"/>
		<action path="/insertBookValue" type="org.techytax.struts.action.InsertBookValueAction"
			name="bookValueForm">
			<forward name="success" path="/getBookValues.do"></forward>
		</action>
		<action path="/toSettlement" type="org.techytax.struts.action.ToSettlementAction"
			name="settlementForm">
			<forward name="success" path="/WEB-INF/jsp/boek/settlement.jsp"></forward>
		</action>
		<action path="/updateSettlement" type="org.techytax.struts.action.UpdateSettlementAction"
			name="settlementForm">
			<forward name="success" path="/WEB-INF/jsp/boek/settlement.jsp"></forward>
		</action>
		<action path="/setLanguage" type="org.techytax.struts.action.SetLanguageAction"
			name="languageForm" >
			<forward name="success" path="/index.jsp"></forward>
		</action>					
	</action-mappings>
	<message-resources parameter="properties.messages_nl" />
	<message-resources parameter="properties.messages_en" />
	<message-resources parameter="properties.messages_en_US" />	
	<message-resources parameter="properties.messages_el"/>
	<message-resources parameter="properties.messages_es" />
	<message-resources parameter="properties.messages_fr" />	
	<message-resources parameter="properties.messages" />
</struts-config>
